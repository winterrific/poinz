{
  "name": "poinz-server",
  "version": "0.21.x",
  "description": "Distributed Planning Poker",
  "private": true,
  "author": "xeronimus@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/Zuehlke/poinz",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zuehlke/poinz.git"
  },
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest \"./test/unit\" \"./test/integration\"",
    "test:system": "jest \"./test/system\"",
    "test:migration": "jest --runInBand \"./test/migrations\"",
    "pretest": "npm run lint",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\" \"migrations/**/*.js\" \"./*js\"",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\" \"migrations/**/*.js\" \"./*js\"",
    "start": "node src/server.js",
    "migrate:status": "migrate-mongo status",
    "migrate:down": "migrate-mongo down",
    "migrate": "migrate-mongo up"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/unit/setup.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/test/**/*Test.js"
    ]
  },
  "dependencies": {
    "body-parser": "2.2.1",
    "dotenv": "17.2.3",
    "express": "4.22.1",
    "express-sslify": "1.2.0",
    "fastq": "1.20.1",
    "jsonwebtoken": "9.0.3",
    "mongodb": "6.21.0",
    "nanoid": "5.1.6",
    "papaparse": "5.5.3",
    "posthog-node": "5.18.1",
    "rate-limiter-flexible": "9.0.1",
    "socket.io": "4.8.3",
    "tv4": "1.3.0",
    "winston": "3.19.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "10.1.0",
    "eslint": "9.39.2",
    "globals": "16.5.0",
    "jest": "29.7.0",
    "migrate-mongo": "14.0.7",
    "socket.io-client": "4.8.3"
  },
  "engines": {
    "node": ">=24"
  }
}

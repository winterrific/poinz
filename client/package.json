{
  "name": "poinz-client",
  "version": "0.21.1x",
  "description": "Distributed Planning Poker",
  "private": true,
  "author": "xeronimus@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/Zuehlke/poinz",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zuehlke/poinz.git"
  },
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.[jt]s?\" \"test/**/*.[jt]s\" \"viteConfig/**/*.[jt]s\" \"./*.[jt]s\"",
    "test": "jest",
    "pretest": "npm run lint"
  },
  "dependencies": {
    "date-fns": "2.30.0",
    "history": "5.3.0",
    "loglevel": "1.8.1",
    "nanoid": "5.0.9",
    "posthog-js": "^1.266.0",
    "purecss": "3.0.0",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "14.2.3",
    "react-linkify": "^1.0.0-alpha",
    "react-markdown": "^10.1.0",
    "react-redux": "8.1.3",
    "react-umami": "^1.0.1",
    "redux": "4.2.1",
    "redux-thunk": "2.4.2",
    "remark-gfm": "^4.0.1",
    "reselect": "4.1.8",
    "socket.io-client": "4.7.2",
    "styled-components": "6.1.0",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@babel/core": "7.23.2",
    "@babel/preset-env": "7.23.2",
    "@babel/preset-react": "7.22.15",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.35.0",
    "babel-plugin-styled-components": "2.0.1",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.3",
    "babel-jest": "29.7.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "jest": "29.7.0",
    "react-test-renderer": "^18.3.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "latest"
  },
  "browserslist": [
    "defaults",
    "edge 18"
  ],
  "engines": {
    "node": ">=20"
  },
  "jest": {
    "transform": {
      "^.+\\.[jt]sx?$": [
        "babel-jest",
        {
          "configFile": "./test/.babelrc"
        }
      ]
    },
    "testMatch": [
      "**/test/unit/**/*Test.[jt]s?(x)",
      "**/test/integration/**/*Test.[jt]s?(x)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/unit/setup.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!nanoid).+\\.js$"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "<rootDir>/test/styleMock.js"
    }
  }
}
